<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Smoke Tests" verbose="1" parallel="tests" thread-count="20">
    <listeners>
        <listener class-name="core.Listeners"></listener>
    </listeners>
    <test name="Chrome Tests" parallel="classes" thread-count="5">
        <groups>
            <run>
                <include name="chrome" />
            </run>
        </groups>
        <classes>
            <class name="smoke.NavigateTest" />
        </classes>
    </test>
    <test name="Firefox Tests" parallel="classes" thread-count="5">
        <groups>
            <run>
                <include name="firefox" />
            </run>
        </groups>
        <classes>
            <class name="smoke.NavigateTest" />
        </classes>
    </test>
</suite>
